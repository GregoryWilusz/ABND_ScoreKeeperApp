<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:contentDescription="@string/img_description" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.example.android.scorekeeperapp.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/padd_16"
                        android:text="@string/team_a_name"
                        android:textColor="@color/fontColor"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/gamesA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fouls"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                        <TextView
                            android:id="@+id/team_a_foul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="@string/foul_team_a"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marg_8"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/yellowcard" />

                        <TextView
                            android:id="@+id/yellow_card_counter_team_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="@string/foul_team_a"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/redcard" />

                        <TextView
                            android:id="@+id/red_card_counter_team_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="@string/foul_team_a"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_24"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/team_a_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/team_score"
                            android:textColor="@color/fontColor"
                            android:textSize="56sp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:onClick="addGoalTeamA"
                        android:text="@string/goal" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:onClick="addFoul"
                        android:text="@string/foul" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:text="@string/yellow_card" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:text="@string/red_card" />
                    <!--android:onClick="addCardTeamA"-->
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/padd_16"
                        android:text="@string/team_b_name"
                        android:textColor="@color/fontColor"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/gamesB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fouls"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                        <TextView
                            android:id="@+id/team_b_foul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="@string/foul_team_b"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marg_8"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/yellowcard" />

                        <TextView
                            android:id="@+id/yellow_card_counter_team_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="@string/foul_team_a"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/redcard" />

                        <TextView
                            android:id="@+id/red_card_counter_team_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="@string/foul_team_a"
                            android:textColor="@color/fontColor"
                            android:textSize="@dimen/txtSize_16" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_24"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/team_b_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/team_score"
                            android:textColor="@color/fontColor"
                            android:textSize="56sp" />
                    </LinearLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:onClick="addGoalTeamB"
                        android:text="@string/goal" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:onClick="addFoulTeamB"
                        android:text="@string/foul" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:text="@string/yellow_card" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marg_8"
                        android:layout_marginLeft="@dimen/marg_24"
                        android:layout_marginRight="@dimen/marg_24"
                        android:text="@string/red_card" />
                    <!--android:onClick="AddCardForTeamB"-->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="42dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="resetScore"
                    android:text="@string/btn_reset" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>